{
  "name": "molecule",
  "type": "module",
  "private": true,
  "description": "Composable, injectable modules for full-stack applications",
  "workspaces": [
    "packages/api/core/*",
    "packages/api/bonds/*/*",
    "packages/api/infrastructure/*",
    "packages/api/resources/*",
    "packages/api/middleware/*",
    "packages/api/utilities/*",
    "packages/api/testing",
    "packages/api/ci/*",
    "packages/app/core/*",
    "packages/app/bonds/*/*",
    "packages/app/infrastructure/*",
    "packages/app/features/*",
    "packages/app/native/*",
    "packages/app/frameworks/*",
    "packages/api/locales/*",
    "packages/app/locales/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "test": "vitest run",
    "test:all": "npm run test --workspaces --if-present",
    "lint": "eslint packages/",
    "lint:fix": "eslint packages/ --fix",
    "format": "prettier --write 'packages/**/*.ts' --ignore-path .prettierignore",
    "format:check": "prettier --check 'packages/**/*.ts' --ignore-path .prettierignore",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "npm run build && changeset publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "25.2.3",
    "@changesets/cli": "2.29.8",
    "@eslint/js": "10.0.1",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-jsdoc": "62.6.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "husky": "9.1.7",
    "jsdom": "28.1.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.0",
    "vitest": "4.0.18"
  },
  "license": "Apache-2.0"
}
